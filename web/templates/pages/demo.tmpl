{{ define "content" }}
<div class="container mx-auto px-4 py-8 max-w-4xl">
    <h1 class="text-4xl font-bold text-blue-600 dark:text-blue-400 mb-8">{{ .Title }}</h1>
    
    <!-- Dark Mode Demo -->
    <div class="card bg-white dark:bg-gray-800 shadow-xl mb-8 border border-gray-200 dark:border-gray-700">
        <div class="card-body">
            <h2 class="card-title text-2xl mb-4 text-gray-900 dark:text-white">Dark Mode Toggle</h2>
            <p class="text-gray-700 dark:text-gray-300 mb-4">
                Click the moon/sun button in the top-right corner to toggle between light and dark themes!
            </p>
            <div class="bg-gray-100 dark:bg-gray-700 p-4 rounded-lg">
                <p class="text-gray-800 dark:text-gray-200">This box changes color based on the theme.</p>
            </div>
        </div>
    </div>
    
    <!-- Tailwind Basic Styling Test -->
    <div class="card bg-white dark:bg-gray-800 shadow-xl mb-8 border border-gray-200 dark:border-gray-700">
        <div class="card-body">
            <h2 class="card-title text-2xl mb-4 text-gray-900 dark:text-white">Tailwind Dark Mode Styles</h2>
            <div class="space-y-4">
                <p class="text-red-500 dark:text-red-400 font-bold">Red Text (adapts to dark mode)</p>
                <p class="text-blue-700 dark:text-blue-300 text-lg">Blue Text (adapts to dark mode)</p>
                <p class="text-green-600 dark:text-green-400 italic">Green Text (adapts to dark mode)</p>
                <div class="bg-purple-100 dark:bg-purple-900 p-4 rounded-lg">
                    <p class="text-purple-800 dark:text-purple-200">Purple background box</p>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Buttons -->
    <div class="card bg-white dark:bg-gray-800 shadow-xl mb-8 border border-gray-200 dark:border-gray-700">
        <div class="card-body">
            <h2 class="card-title text-2xl mb-4 text-gray-900 dark:text-white">Styled Buttons</h2>
            <div class="flex flex-wrap gap-4">
                <button class="bg-blue-500 hover:bg-blue-700 dark:bg-blue-600 dark:hover:bg-blue-800 text-white font-bold py-2 px-4 rounded">
                    Primary Button
                </button>
                <button class="bg-green-500 hover:bg-green-700 dark:bg-green-600 dark:hover:bg-green-800 text-white font-bold py-2 px-4 rounded">
                    Success Button
                </button>
                <button class="bg-red-500 hover:bg-red-700 dark:bg-red-600 dark:hover:bg-red-800 text-white font-bold py-2 px-4 rounded">
                    Danger Button
                </button>
                <button class="bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-800 dark:text-gray-200 font-bold py-2 px-4 rounded">
                    Ghost Button
                </button>
            </div>
        </div>
    </div>
    
    <!-- OK/Cancel Dialog Demo with HTMX -->
    <div class="card bg-white dark:bg-gray-800 shadow-xl mb-8 border border-gray-200 dark:border-gray-700">
        <div class="card-body">
            <h2 class="card-title text-2xl mb-4 text-gray-900 dark:text-white">OK / Cancel Dialog</h2>
            
            <button 
                onclick="document.getElementById('my_modal').showModal()"
                class="bg-blue-500 hover:bg-blue-700 dark:bg-blue-600 dark:hover:bg-blue-800 text-white font-bold py-2 px-4 rounded">
                Open Dialog
            </button>
            
            <dialog id="my_modal" class="rounded-lg bg-white dark:bg-gray-800 p-0 border border-gray-200 dark:border-gray-700">
                <div class="p-6 w-96">
                    <h3 class="font-bold text-lg mb-4 text-gray-900 dark:text-white">Confirm Action</h3>
                    <p class="py-4 text-gray-700 dark:text-gray-300">Are you sure you want to proceed with this action?</p>
                    <div class="flex justify-end gap-2 mt-4">
                        <button 
                            onclick="document.getElementById('my_modal').close()"
                            class="bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-800 dark:text-gray-200 font-bold py-2 px-4 rounded">
                            Cancel
                        </button>
                        <button 
                            class="bg-blue-500 hover:bg-blue-700 dark:bg-blue-600 dark:hover:bg-blue-800 text-white font-bold py-2 px-4 rounded"
                            hx-post="/confirm"
                            hx-target="#dialog-result"
                            onclick="document.getElementById('my_modal').close()">
                            OK
                        </button>
                    </div>
                </div>
            </dialog>
            
            <div id="dialog-result" class="mt-4"></div>
        </div>
    </div>
    
    <!-- HTMX Interactive Demo -->
    <div class="card bg-white dark:bg-gray-800 shadow-xl mb-8 border border-gray-200 dark:border-gray-700">
        <div class="card-body">
            <h2 class="card-title text-2xl mb-4 text-gray-900 dark:text-white">HTMX Form Example</h2>
            
            <div class="form-control w-full max-w-xs">
                <label class="label">
                    <span class="label-text text-gray-700 dark:text-gray-300">Enter your name:</span>
                </label>
                <input 
                    type="text" 
                    placeholder="Type here" 
                    class="input bg-white dark:bg-gray-700 border-gray-300 dark:border-gray-600 text-gray-900 dark:text-white w-full max-w-xs"
                    id="nameInput" />
            </div>
            
            <button 
                class="bg-blue-500 hover:bg-blue-700 dark:bg-blue-600 dark:hover:bg-blue-800 text-white font-bold py-2 px-4 rounded mt-4"
                hx-post="/greet"
                hx-include="#nameInput"
                hx-target="#greeting">
                Greet Me
            </button>
            
            <div id="greeting" class="mt-4 text-lg font-semibold"></div>
        </div>
    </div>
    
    <!-- Alpine.js Interactive Card -->
    <div class="card bg-white dark:bg-gray-800 shadow-xl border border-gray-200 dark:border-gray-700" x-data="{ count: 0, name: '' }">
        <div class="card-body">
            <h2 class="card-title text-2xl mb-4 text-gray-900 dark:text-white">Alpine.js Interactivity</h2>
            
            <div class="bg-gray-100 dark:bg-gray-700 p-4 rounded-lg mb-4">
                <div class="text-sm text-gray-600 dark:text-gray-400">Counter Value</div>
                <div class="text-4xl font-bold text-gray-900 dark:text-white" x-text="count"></div>
            </div>
            
            <div class="flex gap-2 mb-4">
                <button class="bg-green-500 hover:bg-green-700 dark:bg-green-600 dark:hover:bg-green-800 text-white font-bold py-2 px-4 rounded" @click="count++">
                    Increment
                </button>
                <button class="bg-red-500 hover:bg-red-700 dark:bg-red-600 dark:hover:bg-red-800 text-white font-bold py-2 px-4 rounded" @click="count--">
                    Decrement
                </button>
                <button class="bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-800 dark:text-gray-200 font-bold py-2 px-4 rounded" @click="count = 0">
                    Reset
                </button>
            </div>
            
            <div class="form-control">
                <input 
                    type="text" 
                    placeholder="Type your name..." 
                    class="input bg-white dark:bg-gray-700 border-gray-300 dark:border-gray-600 text-gray-900 dark:text-white"
                    x-model="name" />
                <p class="mt-2 text-gray-700 dark:text-gray-300" x-show="name.length > 0">
                    Hello, <span class="font-bold text-blue-600 dark:text-blue-400" x-text="name"></span>! ðŸ‘‹
                </p>
            </div>
        </div>
    </div>
</div>
{{ end }}