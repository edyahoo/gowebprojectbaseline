{{ define "index.tmpl" }}
{{ template "base" . }}
{{ end }}

{{ define "content" }}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold text-blue-600 mb-4">{{ .Title }}</h1>
    
    <div class="bg-white shadow-md rounded-lg p-6">
        <p class="text-gray-700 mb-4">Tailwind CSS is working! ğŸ‰</p>
        
        <!-- HTMX Test -->
        <button 
            class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
            hx-get="/test"
            hx-target="#result">
            Test HTMX
        </button>
        
        <div id="result" class="mt-4 text-green-600"></div>
        
        <!-- Alpine.js Test -->
        <div x-data="{ count: 0 }" class="mt-6">
            <button 
                @click="count++"
                class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
                Alpine Counter: <span x-text="count"></span>
            </button>
        </div>
    </div>
</div>
{{ end }}